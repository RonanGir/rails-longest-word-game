<h1>Numbers and Letters</h1>


<h2>Welcome to the longest word-game!</h2>
  <p>Here is your grid : <%= @grid.join(" ") %></p>

<form action="/score">
  <label for="attempt">What's your best shot? </label>
  <input type="hidden" name="grid" value="<%= @grid.join(" ") %>">
   <input type="hidden" name="start_time" value="<%= @start_time %>">
  <input type="text" id="input" name="attempt" placeholder="Try a word">
  <input type="submit" value="Go on!">
</form>
